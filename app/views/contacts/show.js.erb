$(function(){
  var email = "<%= j(@contact.email)%>"
  var name = "<%= j(@contact.name)%>"
  var id = <%= @contact.id%>
  $("#information").val("")

  var twitterUsername = "<%= j(@contact.twitter_username)%>"
  $("input[name='receiver']").val(email)
  $("#contact_name").text(name)
  var messages= "<%= j(render partial: "messages", locals: {contact: @contact})%>"
  $("#message-content").html(messages)

  $("#contact_id").val(id)
  $("#contact_id").html(id)
  $("#contact_new_info").val("")
  $("#subject_field").val("")
  $("#body_field").val("")
  $("#main-name").text(name);
  $("input[id='twitter-user-field']").val(twitterUsername);
  $("#send-text-area").text("@"+twitterUsername+ " ")
})
