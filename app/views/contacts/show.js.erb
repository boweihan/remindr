$(function(){
  // buggy for gmail &gt character
  var email = "<%= j(@contact.email)%>"
  var name = "<%= j(@contact.name)%>"
  var id = <%= @contact.id%>
  $("input[name='receiver']").val(email)
  $("#contact_name").text(name)
  var messages= "<%= j(render partial: "messages", locals: {contact: @contact})%>"
  $("#messages").html(messages)
  var info = "<%= j(render partial: "details", locals: {contact: @contact})%>"
  $("#contact_details").html(info)
  $("#contact_id").val(id)
  $("#contact_id").html(id)
  var new_selector_html = "<%= j(select_tag "field", options_for_select(@contact.generate_selectors))%>"
  $("#contact_field").html(new_selector_html)
  $("#contact_new_info").val("")
  $("#subject_field").val("")
  $("#body_field").val("")
  $("#main-name").text(name)
})
