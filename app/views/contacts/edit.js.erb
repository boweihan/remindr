$('.edit-modal').css('display', 'block');
var name = "<%= j(@contact.name)%>"
var phone = "<%= j(@contact.phone)%>"
var email = "<%= j(@contact.email)%>"
var id = <%= @contact.id%>
var category = "<%= j(@contact.category)%>"
var twitterUsername = "<%= j(@contact.twitter_username)%>"

$("input[name='contact[name]']").val(name);
$("input[name='contact[phone]']").val(phone);
$("input[name='contact[email]']").val(email);
$("input[name='contact[twitter_username]']").val(twitterUsername);
$("input[name='contact[category]']").val(category);

$("input[type='hidden']").attr('name', '_method');
$("input[type='hidden']").attr('value', 'patch');

$("form").attr("action","/contacts/" + id);
