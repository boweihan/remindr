<h1> Load Google Contacts </h1>
<h3> Please select all contacts you would like to keep in touch with </h3>
<a style="color:black;" href="/" id="import_contact_button">Submit</a>
<div class="potential-contacts-container">
  <% @potential_contacts.each do |contact| %>
    <div class="potential-contacts">
      <div class="contact-image-div" %>
        <%# image_tag(contact['pic'],{class:"contact-image", alt:"not found"}) %>
      </div>
      <h2 class="potential-contact-name"><%= contact['name']%></h2>
      <h4 class="potential-contact-email"><%= contact['email']%></h4>
      <%= hidden_field_tag "phone_number", contact['phone'], {class:"potential-contact-phone-number"} %>
    </div>
<% end %>
</div>
